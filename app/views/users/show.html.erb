<div class="container">
  <div class="row">
   <div class="col-4">
<h2 class="mt-3">User info</h2>
<%=image_tag @user.get_profile_image(150,150) %>
<table class="table table-border-top">
  <tr>
    <th>name</th>
    <td><%=@user.name %></td>
  </tr>
  <tr>
  <th>introduction</th>
  <td><%=@user.introduction %></td>
  </tr>
</table>
<% if @user==current_user %>
 <%=link_to "edit",edit_user_path(@user.id) %>


<% end %>


<h2 class="mt-4">New book</h2>
<% if @book.errors.any? %>
<h2><%=@book.errors.count %>error prohibited this obj from being saved:</h2>
<ul><% @book.errors.full_messages.each do |message| %>
<li><%=message %></li>
<% end %>
</ul>
<% end %>
<%=form_with model:@book do |f|%>
<h6>Title</h6>
<%=f.text_field:title %>
<h6 class="mt-2">Opinion</h6>
<%=f.text_area:body %>
<p><%=f.submit "Create book" %></p>
<% end %>
</div>

<div class="col-8">
<h2 class="mt-3">Books</h2>
<table class="table table-border-top">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%=image_tag book.user.get_profile_image(100,100) %>
    </td>
    <td>
      <%=book.title %>
    </td>
    <td>
      <%=book.body %>
    </td>
  </tr>
  <% end %>
  </table>
  </div>
</div>
</div>