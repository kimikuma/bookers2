<h1>User info</h1>
<%=image_tag @user.get_profile_image(200,200) %>
<table>
  <tr>
    <th>name</th>
    <td><%=@user.name %></td>
  </tr>
  <tr>
  <th>introduction</th>
  <td><%=@user.introduction %></td>
  </tr>
</table>
<% if @user==current_user %>
 <%=link_to "edit",edit_user_path(@user.id) %>
<% end %>


<h1>New book</h1>
<% if @book.errors.any? %>
<h2><%=@book.errors.count %>error prohibited this obj from being saved:</h2>
<ul><% @book.errors.full_messages.each do |message| %>
<li><%=message %></li>
<% end %>
</ul>
<% end %>
<%=form_with model:@book do |f|%>
<h4>Title</h4>
<%=f.text_field:title %>
<h4>Body</h4>
<%=f.text_area:body %>
<p><%=f.submit "Create Book" %></p>
<% end %>



<h1>Books</h1>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%=image_tag book.user.get_profile_image(100,100) %>
    </td>
    <td>
      <%=book.title %>
    </td>
    <td>
      <%=book.body %>
    </td>
  </tr>
  <% end %>
</table>
