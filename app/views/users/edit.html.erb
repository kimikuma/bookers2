<div class="container">
  <div class="row">
    <div class="col-4 mx-auto mt-2">
<h1 class="text-start">User info</h1>
<% if @user.errors.any? %>
<h3><%=@user.errors.count %>error prohibited this obj from being saved:</h3>
<ul><% @user.errors.full_messages.each do |message| %>
<li><%=message %></li>
<% end %>
</ul>
<% end %>
<p class="text-start"><%=form_with model:@user,url:user_path(@user.id),method: :patch do |f| %></p>
<h6 class="text-start">Name</h6>
<p class="text-start"><%=f.text_field:name,class: "form-control" %></p>
<h6 class="text-start">Image</h6>
<p class="text-start"><%=f.file_field:profile_image %></p>
<h6 class="text-start">Introduction</h6>
<p class="text-start"><%=f.text_area:introduction,class: "form-control" %></p>
<p p class="text-start"><%=f.submit 'Update User',class: "btn btn-secondary" %></p>
<% end %>

</div>
</div>
</div>