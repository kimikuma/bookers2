
<div class="col-md-3">
<h2 class="mt-3">User info</h2>
<%=image_tag current_user.get_profile_image(150,150) %>
<table class="table table-border-top">
  <tr>
    <th>name</th>
    <td><%=current_user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%=current_user.introduction %></td>
  </tr>
</table>

<%= link_to edit_user_path(current_user.id),class: "btn btn-outline-secondary btn-block" do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>

<h2 class="mt-4">New book</h2>

<%=form_with model:book do |f|%>
<h6>Title</h6>
<%=f.text_field:title %>
<h6 class="mb-3">Opinion</h6>
<%=f.text_area:body,class: "mt-2" %>
<p><%=f.submit 'Create Book',class: "btn btn-success" %></p>
<% end %>
</div>