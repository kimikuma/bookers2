<div class="col-4">
<h2 class="mt-3">User info</h2>
<%=image_tag current_user.get_profile_image(150,150) %>
<table class="table table-border-top">
  <tr>
    <th>name</th>
    <td><%=current_user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%=current_user.introduction %></td>
  </tr>
</table>

<%=link_to "edit",edit_user_path(current_user) %>

<h2 class="mt-4">New book</h2>
<% if book.errors.any? %>
<h2><%=book.errors.count %>error prohibited this obj from being saved:</h2>
<ul><% book.errors.full_messages.each do |message| %>
<li><%=message %></li>
<% end %>
</ul>
<% end %>
<%=form_with model:book do |f|%>
<h6>Title</h6>
<%=f.text_field:title %>
<h6 class="mt-2">Opinion</h6>
<%=f.text_area:body %>
<p><%=f.submit "Create Book" %></p>
<% end %>
</div>