<div class="container">
  <div class="row">
    <div class="col-4 mx-auto mt-2">
<h2>Editing Book</h2>
<% if @book.errors.any? %>
<h2><%=@book.errors.count %>error prohibited this obj from being saved:</h2>
<ul><% @book.errors.full_messages.each do |message| %>
<li><%=message %></li>
<% end %>
</ul>
<% end %>
<%=form_with model:@book,url:book_path(@book.id),method: :patch do |f|%>
<h6>Title</h6>
<p><%=f.text_field:title,class: "form-control mb-3" %></p>
<h6>Opinion</h6>
<p><%=f.text_area:body,class: "form-control" %></p>
<p><%#<%=f.submit 'Updete Book',class: "btn btn-success" %>
<<button type="submit",class="btn btn-success">Update Book</button></p>
<% end %>
<span class="border-right"><%=link_to 'Show',book_path(@book.id) %></span>
<span class="ms-2"><%=link_to 'Back',books_path %></span>
</div>
</div>
</div>