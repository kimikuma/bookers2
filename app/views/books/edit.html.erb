<div class="container">
  <div class="row">
    <div class="col-4 mx-auto mt-2">
<h2>Editing Book</h2>
<% if @book.errors.any? %>
<h2><%=@book.errors.count %>error prohibited this obj from being saved:</h2>
<ul><% @book.errors.full_messages.each do |message| %>
<li><%=message %></li>
<% end %>
</ul>
<% end %>
<%=form_with model:@book,url:book_path(@book.id),method: :patch do |f|%>
<h6>Title</h6>
<%=f.text_field:title,class: "form-control mb-3" %>
<h6>Opinion</h6>
<%=f.text_area:body,class: "form-control" %>
<%=f.submit "Updete Book",class: "btn btn-success mt-3"%>
<% end %>
</div>
</div>
</div>