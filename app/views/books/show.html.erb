<h1>New book</h1>
<% if @bookn.errors.any? %>
<h2><%=@bookn.errors.count %>error prohibited this obj from being saved:</h2>
<ul><% @bookn.errors.full_messages.each do |message| %>
<li><%=message %></li>
<% end %>
</ul>
<% end %>
<%=form_with model:@bookn do |f|%>
<h4>Title</h4>
<%=f.text_field:title %>
<h4>Body</h4>
<%=f.text_area:body %>
<p><%=f.submit "Create Book" %></p>
<% end %>


<h1>Book detail</h1>
<table>
  <td><%=image_tag @book.user.get_profile_image(200,200) %></td>
  <td><%=@book.title %></td>
  <td><%=@book.body %></td>
  <% if @book.user==current_user %>
  <td>
    <%=link_to "Edit",edit_book_path(@book.id)%>
  </td>
  <td>
    <%=link_to "Destroy",book_path(@book),method: :delete,"data-confirm"=>"本当に削除しますか?" %>
    <% end %>
  </td>
</table>