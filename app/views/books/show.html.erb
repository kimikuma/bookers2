<div class="container">
  <div class="row">
    <div class="col-3">
    <h2 class="mt-3">User info</h2>
<%=image_tag @book.user.get_profile_image(200,200) %>
<table class="table table-border-top">
  <tr>
    <th>name</th>
    <td><%=@book.user.name %></td>
  </tr>
  <tr>
  <th>introduction</th>
  <td><%=@book.user.introduction %></td>
  </tr>
</table>
<% if @book.user==current_user %>
 <%=link_to "edit",edit_user_path(@book.user.id) %>
<% end %>


<h2 class="mt-4">New book</h2>
<% if @bookn.errors.any? %>
<h2><%=@bookn.errors.count %>error prohibited this obj from being saved:</h2>
<ul><% @bookn.errors.full_messages.each do |message| %>
<li><%=message %></li>
<% end %>
</ul>
<% end %>
<%=form_with model:@bookn do |f|%>
<h6>Title</h6>
<%=f.text_field:title %>
<h6 class="mt-2">Body</h6>
<%=f.text_area:body %>
<p><%=f.submit "Create Book" %></p>
<% end %>
</div>
<div class="col-8">
<h1>Book detail</h1>
<table>
  <td><%=image_tag @book.user.get_profile_image(150,150) %></td>
  <td><%=@book.title %></td>
  <td><%=@book.body %></td>
  <% if @book.user==current_user %>
  <td>
    <%=link_to "Edit",edit_book_path(@book.id)%>
  </td>
  <td>
    <%=link_to "Destroy",book_path(@book),method: :delete,"data-confirm"=>"本当に削除しますか?" %>
    <% end %>
  </td>
</table>
</div>
</div>
</div>